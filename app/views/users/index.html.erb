<div class="container px-5">
  <div class="row">
    <div class="col-3">
      <%= render 'books/list', user: @user %>
    </div>
    <div class="col-8">
      <h2>Users</h2>
      <table class="table table-hober table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= image_tag user.get_profile_image(100,100) %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to 'Show', users_path(@user) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>