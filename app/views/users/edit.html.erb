<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-lg-5 px-5 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, autofocus: true, id: "user_name", class: "form-control", placeholder: "Name" %>
      </div>
      <div class="mb-3">
        <%= f.label :Image, class: "form-label" %>
        <%= f.file_field :profile_image, class: "form-control border-0", accept: "image/*" %>
      </div>
      <div class="mb-3">
        <%= f.label :introduction, class: "form-label" %>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <div class="field">
        <div class="actions">
          <input type="submit" class="btn btn-secondary" role="button" value="Update User">
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
