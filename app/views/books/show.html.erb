<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'author', user: @user %>
    </div>
    <div class="col-8 offset-1">
      <h2>Books detail</h2>
      <table class="table table-hober table-inverse">
        <thead></thead>
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(80,80) %> <br>
              <%= link_to user_path(@user.id) do %>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-success" %></td>
              <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>