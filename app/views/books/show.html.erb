<div class="container px-5">
  <div class="row">
    <div class="col-3">
      <%= render 'author', user: @user %>
    </div>
    <div class="col-8">
      <h2>Books detail</h2>
      <table class="table table-hober table-inverse">
        <thead></thead>
        <tbody>
          <% @book.each do |book| %>
          <tr>
            <td>
              <%= image_tag book.user.get_profile_image(100,100) %> <br>
              <%= link_to user_path(user.id) do %>
                <%= book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.book_name %>
              <% end %>
            </td>
            <td>
              <%= book.opinion %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>