<div class="container">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row justify-content-center">
    <div class="col-sm-12 col-lg-5 px-5 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model: @book do |f| %>
      <div class="mb-3">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, autofocus: true, id: "title", class: "form-control", placeholder: "Title" %>
      </div>
      <div class="mb-3">
        <%= f.label :opinion, class: "form-label" %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="field">
        <div class="actions">
          <input type="submit" class="btn btn-success" role="button" value="Update Book">
        </div>
      </div>
      <% end %>
      <span><%= link_to "Show", book_path(@book.id) %></span>
      <sapn>|</sapn>
      <span><%= link_to "Back", books_path %></span>
    </div>
  </div>
</div>
