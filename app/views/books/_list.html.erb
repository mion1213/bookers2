<h2>User info</h2>
<%= image_tag current_user.get_profile_image(100,100) %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
  </tbody>
</table>

  
<div class="row">
  <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
    <span><i class="fas fa-user-cog"></i></span>
  <% end %>
</div>

<h2 class="mt-3">New book</h2>

<%= form_with(model: @book, url: books_path, local: true) do |book| %>
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="book[title]">
  </div>
  <div class="form-group">
    <label for="body">Opinion</label>
    <textarea class="form-control" id="body" name="book[body]"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-success">Create Book</button>
  </div>
<% end %>