<h2>User info</h2>
<%= image_tag current_user.get_profile_image(100,100) %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
  </tbody>
</table>

  
<div class="row">
  <!--href編集必須-->
  <a class="btn btn-outline-secondary btn-block" href="edit_user_path(user)" role="button">
    <i class="fa-solid fa-user-gear"></i>
  </a>
</div>

<h2 class="mt-3">New book</h2>

<%= form_with(model: @book, local: true) do |book| %>
  <div class="form-group">
    <label for="book_name">Title</label>
    <input type="text" class="form-control" id="book_name" name="book[book_name]">
  </div>
  <div class="form-group">
    <label for="opinion">Opinion</label>
    <textarea class="form-control" id="opinion" name="book[opinion]"></textarea>
  </div>
  <button type="submit" class="btn btn-success">Create Book</button>
<% end %>